package com.lpx.computer;

public class HardDisk {
	private int[] data;

	public HardDisk() {
		data = new int[3000];
		for (int i = 0; i <= 30; i++) {
			for (int j = 0; j <= 2 * i - 1; j++) {
				data[(i - 1) * 60 + j] = 1;
			}
		}
		
	}

	public int[] read(int begin, int end) {
		int[] value = new int[end - begin ];
		for (int i = begin, j = 0; i <= end; i++, j++) {
			value[j] = data[i];
		}
		return value;
	}
}
